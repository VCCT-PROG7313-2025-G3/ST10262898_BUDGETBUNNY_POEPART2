<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_date"
    tools:context=".ResourcesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Navigation Bar -->
        <View
            android:id="@+id/v_navBar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/dark_pastel_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resources"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:fontFamily="@font/pacifico"
            app:layout_constraintTop_toBottomOf="@id/v_navBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Topic 1: Save Money -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_save_money"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#40A9A9A9"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="How to Save Money"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:fontFamily="@font/jost_medium"
                            android:layout_margin="16dp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/app_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Topic 2: Invest Well -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_invest"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#40A9A9A9"
                    app:layout_constraintTop_toBottomOf="@id/card_save_money"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="How to Invest Well"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:fontFamily="@font/jost_medium"
                            android:layout_margin="16dp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/app_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Topic 3: Earn More -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_earn"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#40A9A9A9"
                    app:layout_constraintTop_toBottomOf="@id/card_invest"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="How to Earn More"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp"
                            android:fontFamily="@font/jost_medium"
                            android:layout_margin="16dp"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/app_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>