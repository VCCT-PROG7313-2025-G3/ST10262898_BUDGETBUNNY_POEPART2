
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

 <Space
     android:layout_width="match_parent"
     android:layout_height="65dp"/>

 <TextView
     android:id="@+id/textView2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center_horizontal"
     android:fontFamily="@font/assistant_bold"
     android:text="@string/welcome_back_to"
     android:textColor="@color/white"
     android:textSize="20sp" />

 <TextView
     android:id="@+id/BudgetBunny"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center_horizontal"
     android:fontFamily="@font/budgetbunny_pacifico"
     android:text="@string/budgetbunny"
     android:textColor="@color/white"
     android:textSize="45sp"
     android:layout_marginTop="-22dp"/>

 <Space
     android:layout_width="match_parent"
     android:layout_height="20dp"/>

 <TextView
     android:id="@+id/LogInToStartSaving"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="right"
     android:fontFamily="@font/jost_medium"
     android:text="@string/log_in_to_start_saving"
     android:textColor="@color/light_purple"
     android:textSize="14sp"
     android:paddingRight="230dp"/>

 <Space
     android:layout_width="match_parent"
     android:layout_height="10dp"/>

 <EditText
     android:id="@+id/inputUserName"
     android:layout_width="300dp"
     android:layout_height="45dp"
     android:layout_gravity="center_horizontal"
     android:background="@drawable/custum"
     android:ems="10"
     android:hint="@string/username"
     android:inputType="text"
     android:textColor="@color/white"
     android:textColorHint="@color/white"
     android:textSize="12sp" />

 <Space
     android:layout_width="match_parent"
     android:layout_height="15dp"/>

 <EditText
     android:id="@+id/inputPassword"
     android:layout_width="300dp"
     android:layout_height="45dp"
     android:layout_gravity="center_horizontal"
     android:background="@drawable/custum"
     android:ems="10"
     android:hint="@string/password"
     android:inputType="textPassword"
     android:textColor="@color/white"
     android:textColorHint="@color/white"
     android:textSize="12sp" />

 <Space
     android:layout_width="match_parent"
     android:layout_height="15dp"/>

 <Button
     android:id="@+id/Login"
     android:layout_width="wrap_content"
     android:layout_height="36dp"
     android:layout_gravity="center_horizontal"
     android:backgroundTint="@color/dark_pastel_purple"
     android:textAlignment="center"
     android:text="Log In"
     android:textColor="#FFFFFF" />

 <Space
     android:layout_width="match_parent"
     android:layout_height="15dp"/>

 <TextView
     android:id="@+id/textView"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:fontFamily="@font/assistant_bold"
     android:text="@string/or_log_in_using"
     android:textColor="@color/light_purple"
     android:textSize="14sp"
     android:textAlignment="center"
     android:layout_gravity="center_horizontal"/>

 <Space
     android:layout_width="match_parent"
     android:layout_height="15dp"/>

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <ImageButton
      android:id="@+id/Instagram"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:adjustViewBounds="true"
      android:background="@android:color/transparent"
      android:contentDescription="@string/instagram_login"
      android:padding="0dp"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/Apple"
      app:layout_constraintHorizontal_bias="0.86"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"
      app:srcCompat="@drawable/instagram_logo" />

  <ImageButton
      android:id="@+id/Apple"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:adjustViewBounds="true"
      android:contentDescription="@string/apple_login"
      android:padding="0dp"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"
      app:srcCompat="@drawable/apple_logo" />

  <ImageButton
      android:id="@+id/Google"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:adjustViewBounds="true"
      android:contentDescription="@string/google_login"
      android:padding="0dp"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.146"
      app:layout_constraintStart_toEndOf="@+id/Apple"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0"
      app:srcCompat="@drawable/google_logo" />

<!--Wamsta section-->

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="523dp"
      android:layout_height="459dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="572dp"
      android:background="@android:color/transparent"
      android:importantForAccessibility="no"
      android:padding="0dp"
      android:rotation="-2"
      android:scaleType="fitXY"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/budgetbunny_wamsta"
      tools:ignore="VisualLintBounds" />

  <TextView
      android:id="@+id/accountMaker"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/don_t_have_an_account"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.544"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.187"
      android:fontFamily="@font/assistant_bold"/>

  <TextView
      android:id="@+id/accountMaker2"
      android:layout_width="208dp"
      android:layout_height="46dp"
      android:fontFamily="@font/assistant_bold"
      android:text="@string/create_an_account_below_to_start"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="17sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"

      app:layout_constraintVertical_bias="0.201"

      tools:ignore="TextSizeCheck" />
  <!--THIS IS WHAT I CHANGED-->

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="338dp"
      android:layout_height="123dp"
      android:importantForAccessibility="no"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.188"
      app:srcCompat="@drawable/wamsta_speech_bubble" />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="600dp"
      android:layout_height="500dp"
      android:layout_marginStart="52dp"
      android:layout_marginTop="108dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_goneMarginTop="50dp"
      app:srcCompat="@drawable/budgetbunny_wamsta" />

  <ImageButton
      android:id="@+id/SignUp"
      android:layout_width="193dp"
      android:layout_height="70dp"
      android:background="@android:color/transparent"
      android:scaleType="fitXY"
      app:srcCompat="@drawable/signup_speach_bubble"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="44dp"

      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="235dp"
      tools:layout_editor_absoluteX="44dp"
      tools:layout_editor_absoluteY="235dp" />

  <TextView
      android:id="@+id/textView16"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="92dp"
      android:layout_marginTop="256dp"
      android:fontFamily="@font/assistant_bold"
      android:text="Sign Up"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

 </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
